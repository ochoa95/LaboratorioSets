	public  static int verificar(String i){
	    int val;
	    int verify;
		try {
			val= Integer.parseInt(i);
			if (val>0 && val <= 5){
				System.out.println("Número correcto");
				verify=1;
			}
			else {
				System.out.println("El número es incorrecto");
				verify=2;
			} 
		}
		catch (Exception e){
			System.out.println("No puedes ingresar una letra");
			verify=2;
		}
		return verify;
	}
}
